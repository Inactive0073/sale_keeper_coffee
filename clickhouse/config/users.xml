<clickhouse>
    <!-- Профили настроек -->
    <profiles>
        <default>
            <!-- Лимиты под VDS 4GB -->
            <max_memory_usage>3221225472</max_memory_usage> <!-- ~3GB -->
            <max_bytes_before_external_group_by>2147483648</max_bytes_before_external_group_by> <!-- 2GB -->
            <max_bytes_before_external_sort>2147483648</max_bytes_before_external_sort>
            
            <!-- Логирование можно включить позже -->
            <log_queries>0</log_queries>
            <log_query_threads>0</log_query_threads>
            <log_processors_profiles>0</log_processors_profiles>
        </default>

        <readonly>
            <readonly>1</readonly>
        </readonly>
    </profiles>

    <!-- Пользователи -->
    <users>
        <clickhouse_user>
            <profile>default</profile>
            <networks>
                <ip>::/0</ip>
            </networks>
            <password><![CDATA[ClickHouse_123]]></password>
            <quota>default</quota>
            <access_management>0</access_management>
        </clickhouse_user>
    </users>

    <!-- Квоты -->
    <quotas>
        <default>
            <interval>
                <duration>3600</duration>
                <queries>0</queries>
                <errors>0</errors>
                <result_rows>0</result_rows>
                <read_rows>0</read_rows>
                <execution_time>0</execution_time>
            </interval>
        </default>
    </quotas>
</clickhouse>